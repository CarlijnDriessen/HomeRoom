<div data-controller="toggle" data-toggle-initial-tab="<%= @active_tab %>">
  <input type="checkbox" id="toggle" data-action="click->toggle#fire" class="toggleCheckbox mt-3 ml-5" />
  <label for="toggle" class='toggleContainer'>
    <div>Guest</div>
    <div>Host</div>
  </label>

  <div class="container">
    <!-- Host Tab -->
    <div data-toggle-target="togglableElement" class="d-none">
      <h4 class="mt-4">My listings</h4>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        <% @active_listings.each do |listing| %>
          <div class="col">
            <div class="card h-100 bg-white rounded-4 shadow-sm border-0 listing-card-aesthetic">
              <% if listing.photo.attached? %>
                <%= cl_image_tag listing.photo.key, class: "card-img-top mb-3 rounded-3 aesthetic-img" %>
              <% end %>
              <div class="card-body d-flex flex-column p-4">
                <h4 class="card-title text-truncate mb-2 text-dark">
                  <strong><%= listing.title %></strong>
                </h4>
                <p class="card-text text-muted small flex-grow-1 mb-3">
                  <strong>Category:</strong> <%= listing.category %>
                </p>
                <p class="card-text fw-bold mb-1 fs-5">
                  <span class="text-dark">Price</span>
                  <span style="color: #00B4CC;">
                    <%= number_to_currency(listing.price, unit: "€", format: "%n%u") %>
                  </span>
                </p>
              </div>
              <div class="card-footer d-flex justify-content-end align-items-center bg-transparent border-top-0 pt-0 pb-4 px-4">
                <%= form_with url: deactivate_listing_path(listing), method: :patch, local: true do %>
                  <%= hidden_field_tag :tab, 'host' %>
                  <%= submit_tag "Set to inactive", class: "btn btn-primary btn-sm rounded-pill px-3 py-2 aesthetic-btn" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="accordion" id="accordionInactive">
        <div class="accordion-item bg-transparent">
          <h6 class="accordion-header">
            <button class="accordion-button d-flex gap-2 bg-transparent my-2"
                    type="button"
                    data-bs-toggle="collapse"
                    data-bs-target="#collapseOne"
                    aria-expanded="false"
                    aria-controls="collapseOne">
              <span><em>Show my inactive listings</em></span>
              <span class="chevron ms-2"></span>
            </button>
          </h6>
          <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionInactive">
            <div class="accordion-body">
              <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
                <% @inactive_listings.each do |listing| %>
                  <div class="col">
                    <div class="card h-100 bg-white rounded-4 shadow-sm border-0 listing-card-aesthetic">
                      <% if listing.photo.attached? %>
                        <%= cl_image_tag listing.photo.key, class: "card-img-top mb-3 rounded-3 aesthetic-img" %>
                      <% end %>
                      <div class="card-body d-flex flex-column p-4">
                        <h4 class="card-title text-truncate mb-2 text-dark">
                          <strong><%= listing.title %></strong>
                        </h4>
                        <p class="card-text text-muted small flex-grow-1 mb-3">
                          <strong>Category:</strong> <%= listing.category %>
                        </p>
                        <p class="card-text fw-bold mb-1 fs-5">
                          <span class="text-dark">Price</span>
                          <span style="color: #00B4CC;">
                            <%= number_to_currency(listing.price, unit: "€", format: "%n%u") %>
                          </span>
                        </p>
                      </div>
                      <div class="card-footer d-flex justify-content-end align-items-center bg-transparent border-top-0 pt-0 pb-4 px-4">
                        <%= form_with url: activate_listing_path(listing), method: :patch, local: true do %>
                          <%= hidden_field_tag :tab, 'host' %>
                          <%= submit_tag "Set to active", class: "btn btn-primary btn-sm rounded-pill px-3 py-2 aesthetic-btn" %>
                        <% end %>
                      </div>
                    </div>
                  </div>
                <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="border-bottom my-4"></div>

      <div class="my-3">
        <h4>Pending bookings</h4>
      </div>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        <% @host_pending_bookings.each do |booking| %>
          <div class="col">
            <div class="card h-100 bg-white rounded-4 shadow-sm border-0 listing-card-aesthetic">
              <% if booking.listing.photo.attached? %>
                <%= cl_image_tag booking.listing.photo.key, class: "card-img-top mb-3 rounded-3 aesthetic-img" %>
              <% end %>
              <div class="card-body d-flex flex-column p-4">
                <h4 class="card-title text-truncate mb-2 text-dark">
                  <strong><%= booking.listing.title %></strong>
                </h4>
                <p class="card-text text-muted small flex-grow-1 mb-3">
                  <strong>Category:</strong> <%= booking.listing.category %>
                </p>
                <p class="card-text fw-bold mb-1 fs-5">
                  <span class="text-dark">Price</span>
                  <span style="color: #00B4CC;">
                    <%= number_to_currency(booking.listing.price, unit: "€", format: "%n%u") %>
                  </span>
                </p>
              </div>
              <div class="card-footer d-flex justify-content-end align-items-center bg-transparent border-top-0 pt-0 pb-4 px-4">
                <%= form_with url: accept_booking_path(booking), method: :patch, local: true do %>
                  <%= hidden_field_tag :tab, 'host' %>
                  <%= submit_tag "Accept", class: "btn btn-primary btn-sm rounded-pill px-3 py-2 aesthetic-btn mx-2" %>
                <% end %>
                <%= form_with url: reject_booking_path(booking), method: :patch, local: true do %>
                  <%= hidden_field_tag :tab, 'host' %>
                  <%= submit_tag "Reject", class: "btn btn-danger btn-sm rounded-pill px-3 py-2 aesthetic-btn text-white" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>

      <div class="my-3">
        <h4>Confirmed bookings</h4>
      </div>
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
        <% @host_accepted_bookings.each do |booking| %>
          <div class="col">
            <div class="card h-100 bg-white rounded-4 shadow-sm border-0 listing-card-aesthetic">
              <% if booking.listing.photo.attached? %>
