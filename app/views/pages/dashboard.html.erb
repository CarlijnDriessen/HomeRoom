<h1>Host</h1>
<h4>My listings</h4>
<h6><em>Active Listings</em></h6>
  <% @active_listings.each do |listing| %>
    <p><%= listing.title %></p>
  <% end %>
  <h6><em>Inactive Listings</em></h6>
  <% @inactive_listings.each do |listing| %>
    <p><%= listing.title %></p>
  <% end %>

<h4>Pending bookings</h4>
<% @host_pending_bookings.each do |booking| %>
  <%= booking.listing.title %>
<% end %>

<h4>Confirmed bookings</h4>
<% @host_accepted_bookings.each do |booking| %>
  <%= booking.listing.title %>
<% end %>

<h4>Rejected bookings</h4>
<% @host_rejected_bookings.each do |booking| %>
  <%= booking.listing.title %>
<% end %>

