<% @bookings.each do |booking| %>
  <div class="booking">
    <h2>Booking ID: <%= booking.id %></h2>
    <p><strong>Activity:</strong> <%= booking.listing.title %></p>
    <p><strong>Host Name:</strong> <%= User.find(booking.listing.user_id).first_name %></p>
    <p><strong>Booking Date:</strong> <%= booking.booking_date.strftime("%B %d, %Y") %></p>
    <p><strong>Status:</strong>
    <% if booking.accepted == nil %>
      Pending
    <% elsif booking.accepted == true %>
      Accepted
    <% else %>
      Rejected
    <% end %>
    </p>
    <h2></h2>
    <%= link_to "Delete Booking", booking_path(booking), data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure you want to delete this booking?"
    }, class: "btn btn-danger" %>

    <%= link_to "Edit Booking", edit_booking_path(booking) %>

    <hr>
  </div>
<% end %>
