<div class="container py-5" style="background-color: white;">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    <% @listings.each do |listing| %>
      <div class="col">
        <div class="card h-100 bg-white rounded-4 shadow-sm border-0 listing-card-aesthetic">
          <div class="card-body d-flex flex-column p-4">
            <% if listing.photo.attached? %>
              <%= cl_image_tag listing.photo.key, class: "card-img-top mb-3 rounded-3 aesthetic-img" %>
            <% end %>
            <h4 class="card-title text-truncate mb-2 text-dark"><strong><%= listing.title %></strong></h4>
            <p class="card-text text-success fw-bold mb-1 fs-5"><strong>Price:</strong> <%= number_to_currency(listing.price, unit: "â‚¬", format: "%n%u") %></p>
            <p class="card-text text-muted small flex-grow-1 mb-3"><strong>Category:</strong> <%= listing.category %></p>
          </div>
          <div class="card-footer d-flex justify-content-between align-items-center bg-transparent border-top-0 pt-0 pb-4 px-4">
            <%= link_to "Show", listing_path(listing), class: "btn btn-outline-primary btn-sm rounded-pill px-3 py-2 aesthetic-btn" %>
            <% if listing.user == current_user %>
              <span class="d-flex align-items-center">
                <%= link_to "Edit", edit_listing_path(listing), class: "btn btn-outline-secondary btn-sm me-2 rounded-pill px-3 py-2 aesthetic-btn" %>
                <%= link_to listing_path(listing),
                            data: { turbo_method: :delete, turbo_confirm: "Are-you sure?" },
                            class: "btn btn-outline-warning btn-sm rounded-circle d-flex align-items-center justify-content-center aesthetic-icon-btn" do %>
                  <i class="fa-regular fa-trash-can"></i>
                <% end %>
              </span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
