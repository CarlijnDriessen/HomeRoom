<h1 class="text-center">Listings</h1>

<div class="container py-4" style="background-color: #fff;">
  <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
    <% @listings.each do |listing| %>
      <div class="col">
        <div class="card h-100 bg-white rounded-4 shadow border-0">
          <div class="card-body">
            <% if listing.photo.attached? %>
              <%= cl_image_tag listing.photo.key, class: "card-img-top" %>
            <% end %>
            <h3 class="card-title"><%= listing.title %></h3>
            <p class="card-text"><strong>Price:</strong> <%= number_to_currency(listing.price) %></p>
            <p class="card-text"><strong>Category:</strong> <%= listing.category %></p>
          </div>
          <div class="card-footer d-flex justify-content-between align-items-center bg-white border-top-0">
            <%= link_to "Show", listing_path(listing), class: "btn btn-success btn-sm" %>
            <% if listing.user == current_user %>
              <span>
                <%= link_to "Edit", edit_listing_path(listing), class: "btn btn-secondary btn-sm" %>
                <%= link_to listing_path(listing),
                            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                            class: "btn btn-danger btn-sm" do %>
                  <i class="fa-regular fa-trash-can"></i>
                <% end %>
              </span>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

