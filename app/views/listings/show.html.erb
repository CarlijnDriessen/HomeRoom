<div class="container py-4">
  <h2 class="fw-bold mb-4"><%= @listing.title %></h2>
  <div class="row g-3">
    <!-- Main large image -->
    <div class="col-md-8">
      <img src="https://www.cibdol.nl/modules/psblog/uploads/1699013093.jpg" class="img-fluid rounded shadow" alt="Main studio image">
    </div>
    <!-- Thumbnail images as a grid -->
    <div class="col-md-4">
      <div class="row row-cols-2 g-2">
        <div class="col">
          <img src="https://thriveyoga.nl/wp-content/uploads/2021/05/Pilates-8-768x512.jpg" class="img-fluid rounded shadow" alt="View 1">
        </div>
        <div class="col">
          <img src="https://s10.s3c.es/imag/_v0/1254x684/d/9/6/yoga-poses-esenciales.jpg" class="img-fluid rounded shadow" alt="View 2">
        </div>
        <!-- Add more thumbnails here if needed -->
      </div>
    </div>
  </div>

  <div class="row mt-4">
    <div class="col-md-8">
      <p><%= @listing.description %></p>
    </div>
    <div class="col-md-4">
      <ul class="list-unstyled">
        <li><strong>Location:</strong> <%= @listing.user.address %></li>
        <li><strong>Posted by:</strong> <%= @listing.user.first_name %></li>
        <li><strong>Category:</strong> <%= @listing.category %></li>
        <li><strong>Price: </strong><%= number_to_currency(@listing.price, unit: "â‚¬", format: "%n%u") %></li>
      </ul>
      <%= link_to "Back to listings", listings_path, class: "btn btn-secondary" %>
      <% if @listing.user == current_user %>
        <div class="mt-2">
          <%= link_to "Edit", edit_listing_path(@listing), class: "btn btn-secondary me-2" %>
          <%= link_to "Delete", listing_path(@listing), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
        </div>
      <% end %>
    </div>
  </div>

  <hr class="my-4">

  <h3>Make a booking</h3>
  <%= render "shared/booking_form" %>
</div>
